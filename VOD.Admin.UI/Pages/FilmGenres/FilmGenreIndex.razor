@using VOD.Common.DTOs;
@using System.Collections;

<table class="table mt-2">
    <thead>
        <tr>
            <th>FilmId</th>
            <th>GenreId</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FilmId</td>
                <td>@item.GenreId</td>
                <td>
                    <div class="d-flex me-1 justify-content-end">         
                        <button class="btn btn-outline-danger rounded-0" @onclick="@(() => OnClick.InvokeAsync(new ClickRefModel<FilmGenreDTO>(PageType.Delete, new FilmGenreDTO())))">Delete</button>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>


@code {
    [Parameter] public List<FilmGenreDTO> Model { get; set; } = new();
    [Parameter] public EventCallback<ClickRefModel<FilmGenreDTO>> OnClick { get; set; }
}