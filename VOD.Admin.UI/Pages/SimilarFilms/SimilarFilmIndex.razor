@using VOD.Common.DTOs;
@using System.Collections;

<table class="table mt-2">
    <thead>
        <tr>
            <th>FilmId</th>
            <th>SimilarFilmId</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FilmId</td>
                <td>@item.SimilarFilmId</td>
                <td>
                    <div class="d-flex me-1 justify-content-end">
                        @*<button class="btn btn-outline-primary rounded-0 me-1" @onclick="@(() => OnClick.InvokeAsync(new ClickModel(PageType.Edit, item.FilmId)))">Edit</button>*@
                        <button class="btn btn-outline-danger rounded-0" @onclick="@(() => OnClick.InvokeAsync(new ClickRefModel<SimilarFilmDTO>(PageType.Delete, new SimilarFilmDTO())))">Delete</button>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>


@code {
    [Parameter] public List<SimilarFilmDTO> Model { get; set; } = new();
    [Parameter] public EventCallback<ClickRefModel<SimilarFilmDTO>> OnClick { get; set; }
}
